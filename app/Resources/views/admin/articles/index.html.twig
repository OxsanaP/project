{% extends 'admin/base.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Articles list</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a href="{{ path('admin_articles_new') }}">
                                <button type="submit" class="btn btn-sm btn-round btn-primary">New article</button>
                            </a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>

                <div class="x_content">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table class="table table-striped jambo_table">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Title</th>
                                <th>Created</th>
                                <th>Updated</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for article in pagination %}
                                <tr>
                                    <td>{{ article.id }}</td>
                                    <td>{{ article.title }}</td>
                                    <td>{% if article.created %}{{ article.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                                    <td>{% if article.updated %}{{ article.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
                                    <td>
                                        <a href="{{ path('admin_articles_edit', { 'id': article.id }) }}">
                                            <button type="button" class="btn btn-round btn-info btn-sm">Edit</button>
                                        </a>
                                        <a href="{{ path('admin_articles_delete', { 'id': article.id }) }}">
                                            <button type="submit" class="btn btn-round btn-danger btn-sm"><span
                                                        class="glyphicon glyphicon-trash"
                                                        aria-hidden="true"></span></button>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <div class="navigation">
                            {{ knp_pagination_render(pagination) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

