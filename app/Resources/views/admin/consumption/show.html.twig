{% extends 'base.html.twig' %}

{% block body %}
    <h1>Consumption</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ consumption.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ consumption.name }}</td>
            </tr>
            <tr>
                <th>Is_user</th>
                <td>{% if consumption.isuser %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if consumption.created %}{{ consumption.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if consumption.updated %}{{ consumption.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_consumption_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_consumption_edit', { 'id': consumption.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
